{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  }
}
